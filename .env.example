# Firebase Configuration
# Copy this file to .env.local for local development.
# In Vercel, set these in Project Settings â†’ Environment Variables.
# Public variables MUST keep the NEXT_PUBLIC_ prefix to be exposed to the browser.
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
# Usually <project-id>.appspot.com
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=1:xxxxxxxxxxxx:web:xxxxxxxxxxxxxxxx
# Optional (only if you enabled Analytics in Firebase)
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Next.js Configuration
# For local dev, keep http://localhost:3000. In Vercel, set to your production URL.
NEXTAUTH_URL=http://localhost:3000
# Generate with: `openssl rand -base64 32` or use Vercel's built-in secret generator
NEXTAUTH_SECRET=

# Feature Flags
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_ADVANCED_SEARCH=true
NEXT_PUBLIC_ENABLE_ANALYTICS_DASHBOARD=true

# Development Configuration
ALLOWED_DEV_ORIGINS=10.22.67.23,localhost,127.0.0.1

# Bundle Analysis
ANALYZE=false

# Server-only Firebase Admin (do NOT prefix with NEXT_PUBLIC_)
# In Vercel, paste these exactly as values. For FIREBASE_ADMIN_PRIVATE_KEY, replace real newlines with \n
# Example: -----BEGIN PRIVATE KEY-----\nMIIEv...\n-----END PRIVATE KEY-----\n
FIREBASE_ADMIN_PROJECT_ID=your-project-id
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nREPLACE_ME\n-----END PRIVATE KEY-----\n"
